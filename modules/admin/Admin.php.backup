        $new_status = sanitize_text_field($_POST['status']);

        global $wpdb;
        $siparis_table = $this->db->getTable('siparis');

        $result = $wpdb->update(
            $siparis_table,
            array('durum' => $new_status),
            array('id' => $order_id),
            array('%s'),
